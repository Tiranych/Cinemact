{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "node",
		"jsx": "react",
		"baseUrl": "./src",
		"paths": {
			"@components/*": ["components/*"],
			"@pages/*": ["pages/*"],
			"@utils/*": ["utils/*"],
			"@hooks/*": ["hooks/*"],
			"@store/*": ["store/*"],
			"@services/*": ["services/*"],
			"@assets/*": ["assets/*"]
		},
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
